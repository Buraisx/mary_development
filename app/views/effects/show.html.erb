<div class="container">
  <h2><%= @effect.name %> Recipes</h2>
  <% recipe_num = 0 %>
    <% @effect.strains.each do |strain|%>
      <% strain.recipes.each do |recipe|  %>
      <div class="row py-3 py-sm-3 py-lg-1 ">
        <%=  render '/recipes/show_recipe_result', recipe: recipe %>
        <% recipe_num += 1 %>
      </div>
      <% end %>
    <% end %>
  <% if recipe_num <= 0 %>
  <div class="row py-3">
    <p>There are no recipes for curing <%= @effect.name %> yet.</p>
  </div>
  <% end %>
</div>
