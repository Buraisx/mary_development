<h2>Most Recent</h2>
<div class="recent">
  <% Recipe.recent.each do |recipe|  %>
  <div class="">
  <h4><%= link_to recipe.title, recipe %></h4>
  <p>By: <%= recipe.user.username %></p>
  </div>
  <a href="<%= recipe_path(recipe.id) %>">
    <% if recipe.image %>
      <%=image_tag recipe.image, alt: recipe.title %>
      <% else %>
      <%= image_tag 'https://static1.squarespace.com/static/5541baefe4b0d1854a60b4bc/5a4843f041920273ab6f703d/5a4843f00d92977993f8d63e/1514685433874/SousWeed_BeijinhodeCoco-5162_LoRes.jpg?format=450w' %>
    <% end %>
  </a>
    <p><%= recipe.description %></p>

  <% end %>
</div>
<br>
<br><br>
<h3>Recipes</h3>
<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Recommended strain</th>
      <th>Title</th>
      <th>Image</th>
      <th>Video</th>
      <th>Description</th>
      <th>Prep time</th>
      <th>Views</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.category_id %></td>
        <td><%= recipe.recommended_strain_id %></td>
        <td><%= recipe.title %></td>
        <td><%= recipe.image %></td>
        <td><%= recipe.video %></td>
        <td><%= recipe.description %></td>
        <td><%= recipe.prep_time %></td>
        <td><%= recipe.views %></td>
        <td><%= link_to 'Show', recipe %></td>

        <% if  user_signed_in? && current_user == recipe.user%>
          <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
          <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Recipe', new_recipe_path %>
<% else %>
  <%= link_to 'New Recipe', new_user_registration_path %>
<% end %>
