
<div class="col-12 col-sm-12 col-lg-4">
  <!-- image -->
  <%= link_to recipe_path(recipe.id) do %>
    <% if recipe.image.url == "" || recipe.image.url == nil %>
    <%= image_tag 'https://static1.squarespace.com/static/5541baefe4b0d1854a60b4bc/5a4843f041920273ab6f703d/5a4843f00d92977993f8d63e/1514685433874/SousWeed_BeijinhodeCoco-5162_LoRes.jpg?format=450w', class: "img-fluid result-img img-thumbnail" %>
    <% else %>
    <%=image_tag recipe.image, alt: recipe.title, class: "img-fluid result-img img-thumbnail" %>
    <% end %>
  <% end %>
</div>

<div class="col-12 col-sm-12 col-lg-8">
  <!-- title -->
  <h4><%= link_to recipe.title, recipe %></h4>

  <!-- username & thumbnail -->
  <p>
    <% if recipe.user %>
      <% if recipe.user.avatar? %>
      <%= link_to (image_tag recipe.user.avatar.thumb.url),   user_path(recipe.user) %>
    <% end %>
      Made by: <%= link_to recipe.user.username,   user_path(recipe.user) %>
    <% else %>
     This Creator got Baked!!!
    <% end %>
  </p>

  <!-- description -->
  <p><%= recipe.description %></p>

</div>
