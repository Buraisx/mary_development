<div class="container">
  <h2>Search Results for <%= params[:search] %></h2>
  <% if @recipes.present? %>
        <% @recipes.each do |recipe| %>
        <div class="row py-3 py-sm-3 py-lg-1 ">

        <%=  render '/recipes/show_recipe_result', recipe: recipe %>
        </div>
        <% end %>
  <% else %>
  <div class="row py-3">
    <p>There are no recipes containing the term(s) <%= params[:search] %>.</p>
  </div>
  <% end %>
</div>
