<% if @recipes.present? %>
<h3>Recipes</h3>
<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Recommended strain</th>
      <th>Title</th>
      <th>Image</th>
      <th>Video</th>
      <th>Description</th>
      <th>Prep time</th>
      <th>Views</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.recipe_category_id%></td>
        <td><%= recipe.recommended_strain_id %></td>
        <td><%= recipe.title %></td>
        <td><%= recipe.image %></td>
        <td><%= recipe.video %></td>
        <td><%= recipe.description %></td>
        <td><%= recipe.prep_time %></td>
        <td><%= recipe.views %></td>
        <td><%= link_to 'Show', recipe %></td>

        <% if  user_signed_in? && current_user == recipe.user%>
          <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
          <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <p>There are no recipes containing the term(s) <%= params[:search] %>.</p>
<% end %>
